#include <iostream>

using namespace std;

class Krug
{
    float radius;
    const float pi = 3.14;
public:
    Krug ()
    {
        radius = 0;
    }
    Krug (int _radius)
    {
        radius = _radius;
    }
    float Perimetar ()
    {
        return 2 * radius * pi;
    }
    float Plostina ()
    {
        return radius * radius * pi;
    }
    int ednakvi()
    {
        return Plostina() == Perimetar();
    }

};
int main()
{
    float r;
    cin >> r;
    Krug k(r);
    cout << k.Perimetar() << endl;
	  cout << k.Plostina() << endl;
	  cout << k.ednakvi() <<endl;
    Krug k1;
    return 0;
}
